<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".OtpActivity">

    <!-- Background Image -->

    <!-- Logo Image -->

    <!-- OTP EditText -->

    <!-- Confirm OTP Button -->

    <!-- Resend OTP Button -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="34dp"
        android:fontFamily="@font/geologicaregular"
        android:text="Forgot your password?"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <Button
        android:id="@+id/btnConfirmOtp"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginBottom="342dp"
        android:backgroundTint="#0064F7"
        android:fontFamily="@font/geologicaregular"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resendOTP" />

    <EditText
        android:id="@+id/otpInput"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_bg"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:maxLength="45"
        android:paddingStart="16dp"
        android:textColorHint="#9C9C9C"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/resendOTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/resendOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:text="Resend OTP"
        android:textColor="#000B54"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirmOtp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpInput" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267">

        <Button
            android:id="@+id/otpEmailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#0064F7"
            android:enabled="true"
            android:fontFamily="@font/geologicaregular"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_dialog_email" />

        <Button
            android:id="@+id/otpPhoneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DBE7FE"
            android:enabled="false"
            android:fontFamily="@font/geologicaregular"
            android:text="Phone"
            android:textColor="#9D9D9D"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/stat_sys_phone_call" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="313dp"
        android:layout_height="35dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/geologicaregular"
        android:text="Enter your email address or phone number, we will send you a confirmation code"
        android:textColor="#767676"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:contentDescription="@string/Back"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>
